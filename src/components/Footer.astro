---
const year = new Date().getFullYear();
---

<footer class="bg-black text-white">
  <div
    class="container mx-auto px-6 grid gap-12 md:grid-cols-3 items-stretch h-44 py-5"
  >
    <!-- Brand -->
    <div class="flex flex-col">
      <h3 class="text-lg font-bold">ListingSite</h3>
      <p class="mt-4 text-sm text-white/70 max-w-xs">
        Property listing with performance-first approach.
      </p>
    </div>

    <!-- Meta -->
    <div
      class="flex flex-col justify-end align-items-center text-center text-sm text-white/70"
    >
      <p>&copy; {year} ListingSite. All rights reserved.</p>
    </div>

    <!-- Links -->
    <nav class="flex flex-row gap-3 text-sm justify-end">
      <a href="/listings" class="hover:text-white/90">Listings</a>
      <a href="/about" class="hover:text-white/90">About</a>
      <a href="/contact" class="hover:text-white/90">Contact</a>
    </nav>
  </div>
</footer>
